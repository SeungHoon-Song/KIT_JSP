.pmobi_glist{
	display : block;
	overflow : hidden;
	width : 100%;
	text-align : center;
	margin : auto;
}
 

/* 이미지 조정  */
#eventList a > img {
	height: 25rem;
}

.wrapper { 
	padding: 0px !important;
}
@media screen and (max-width: 1280px) {
	.wrapper {
		padding: 0;
		margin: 0%;
	}
}

/* 아이폰 8 414px 사이즈  */
/* 이미지 깨지기 전 사이즈  */
@media screen and (max-width: 910px) {
	.wrapper {
		padding: 0;
		margin: 0%;
	}
	#eventList a > img {
		height: 100%;
		padding: 0;
	}
	#title { 
		display: none;
		font-size: 20px;
		font-family: 'jua';	
	}
	.pmobi_glist ul li {
		width: 100%;
		margin: 0;
		padding: 30px;;
		
	}
	.pmobi_glist ul {
		padding: 0;
		margin: 0;
		margin-left: 0px;
	}
	.hashTags {
		display: none;	
	}
}